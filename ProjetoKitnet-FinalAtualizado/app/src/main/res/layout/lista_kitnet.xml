<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">


    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:src="@drawable/casa05" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imgAvatar"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/txtidkitnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID:"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtnomekitnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitnet:"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txtqtdquartos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quartos:"/>
        <TextView
            android:id="@+id/txtnumkitnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Numero:"/>
        <TextView
            android:id="@+id/txtstatuskitnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status:"/>
        <TextView
            android:id="@+id/txtinquilinokitnet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inquilino:"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>