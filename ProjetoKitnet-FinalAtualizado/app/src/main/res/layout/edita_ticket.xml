<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:id="@+id/lineartexto">

        <TextView
            android:id="@+id/idticketedita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="ID CONTA"/>

        <TextView
            android:id="@+id/nomeinquilinoticketedita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Inquilino"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dataticketedita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Data do Ticket" />

        <TextView
            android:id="@+id/statusticketedita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Status do Ticket" />


    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <RadioButton
            android:id="@+id/rbfinalizaticket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Finalizar Ticket" />

    </RadioGroup>

    <EditText
        android:id="@+id/descticketedita"
        android:layout_width="379dp"
        android:layout_height="150dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="25dp"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="textMultiLine"
        android:text="Name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/btncancelaticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Cancelar"
            android:textColor="@color/corOpt04" />

        <Button
            android:id="@+id/btnfinalizaticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="10dp"
            android:text="Finalizar"
            android:textColor="@color/corOpt04"/>


    </LinearLayout>


</LinearLayout>