<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idcontager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="ID CONTA"/>

            <TextView
                android:id="@+id/nomeinquilinoger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Inquilino"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/datacontager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Data do Recibo" />

            <TextView
                android:id="@+id/statuscontager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Status do Recibo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="right">

            <EditText
                android:id="@+id/valorcontager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:editable="false"
                android:enabled="false"
                android:inputType="numberSigned|numberDecimal"
                android:text="ValordoRecibo"
                android:textColor="@color/corOpt05"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <RadioButton
            android:id="@+id/alterapagoger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Altera para PAGO" />
        <RadioButton
            android:id="@+id/alterapendenteger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Altera para PENDENTE" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/btndeletacontager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="DELETAR"
            android:textColor="@color/corOpt04" />

        <Button
            android:id="@+id/btnatualizacontager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="10dp"
            android:text="Atualizar"
            android:textColor="@color/corOpt04"/>


    </LinearLayout>

</LinearLayout>