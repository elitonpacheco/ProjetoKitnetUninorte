<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lineartexto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/casarepara64b" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_toRightOf="@id/imageticket"
        android:orientation="vertical"
        android:id="@+id/lineartexto">

        <TextView
            android:id="@+id/idticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="ID CONTA"/>

        <TextView
            android:id="@+id/nomeinquilinoticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Inquilino"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dataticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Data do Ticket" />

        <TextView
            android:id="@+id/statusticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:text="Status do Ticket" />


    </LinearLayout>


</RelativeLayout>