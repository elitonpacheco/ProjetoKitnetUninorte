<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagepag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/pagcontag64b" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_toRightOf="@id/imagepag"
        android:orientation="vertical"
        android:id="@+id/lineartexto">

            <TextView
                android:id="@+id/idconta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="ID CONTA"/>

            <TextView
                android:id="@+id/nomeinquilino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Inquilino"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dataconta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="Data do Recibo" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/lineartexto"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp">


        <TextView
            android:id="@+id/valorconta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="false"
            android:enabled="false"
            android:inputType="numberSigned"
            android:text="ValordoRecibo"
            android:textColor="@color/corOpt05"
            android:textSize="14sp"
            android:textStyle="bold" />



    </LinearLayout>









</RelativeLayout>